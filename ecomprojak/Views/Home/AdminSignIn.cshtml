
@{
    ViewBag.Title = "AdminSignIn";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="row p-5" style="justify-content: center; align-items: center;">
    <div class="col-sm-6 p-5 pt-3" style="border: 1px solid rgba(128, 128, 128, 0.26);">
        <h2 class="fs-1 text-center" style="color: rgb(41, 250, 34);font-family:cursive;">Login</h2>
        <p class="text-muted text-center">Welcome Our Website(Admin Login)</p>
        <hr>
        <form class="contactform" action="/Home/AdminSignIn" method="post">
            <label>UserName:</label>
            <input type="text" name="email" id="Username" placeholder="Enter Your UserName.." class="form-control" /><br />
            <label>Password:</label>
            <input type="password" name="password" id="password" placeholder="Enter Your Password.." class="form-control" /><br />
            <input type="submit" value="Submit" class="form-control btn btn-outline-success" />
        </form>
    </div>
</div>

