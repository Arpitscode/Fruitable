
@{
    ViewBag.Title = "Update_Category";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ecomprojak.Models.Tbl_Category

<div class="row unscroll">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 formcont p-5">
        <h2 class="text-center mb-3">Update Category</h2>
        <form action="/Admint/Update_Category" method="post" class="p-5" style="overflow:unset;">
            @{
                if (Request.QueryString["id"] != null)
                {
                    <input type="hidden" name="cid" value="@Model.cid"/>
                    <label>Category Name:</label>
                    <input type="text" name="cname" class="form-control" placeholder="Enter Your Category Name..." value="@Model.cname" /><br />
                    }
                }
            <button type="submit" class="btn btn-outline-info">Update</button>
        </form>
    </div>
</div>

